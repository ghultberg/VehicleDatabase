<html>
<head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Sale Order</title>
</head>
<body>
<h1>All Sale Orders</h1>

<br />
<br />
<table border="1">
    <tr><th>Customer Name</th><th>Vehicle</th><th>Sale Price</th><th>Date Purchased</th></tr>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td><a href="/sale_order/?order_id=<%= result[i].order_id %>">
                <%= result[i].first_name %> <%= result[i].last_name %></a></td>
        <td><%= result[i].name %> <%= result[i].model%></td>
        <td>$<%= result[i].sale_price %></td>
        <td><%= result[i].date_purchased %></td>
        <td>
            <form action="/sale_order/delete/">
                <input type="hidden" name="order_id" id="order_id" value="<%= result[i].order_id %>" />
                <input type="submit" value="Delete"/>
            </form></td>
    </tr>
    <% } %>
</table>
</body>

</html>